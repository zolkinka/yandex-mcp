# ==================== Yandex Tracker API ====================
YANDEX_TRACKER_TOKEN=<OAuth токен>
YANDEX_TRACKER_CLOUD_ORG_ID=<ID огранизации>
YANDEX_TRACKER_BASE_URL=https://api.tracker.yandex.net/v2
MCP_SERVER_BASE_URL=http://domein:port/path

# ==================== HTTP Server для ChatGPT ====================
# Порт HTTP сервера
HTTP_PORT=3000
# Хост (0.0.0.0 для всех интерфейсов)
HTTP_HOST=0.0.0.0
# API ключ для аутентификации (опционально, но рекомендуется для продакшена)
# HTTP_API_KEY=your_secret_api_key_here

# ==================== HTTPS (для продакшена) ====================
# Пути к SSL сертификатам (обязательно для HTTPS)
# SSL_KEY_PATH=/path/to/private.key
# SSL_CERT_PATH=/path/to/certificate.crt

# ==================== Logging ====================
LOG_LEVEL=info
LOG_DEST="./logs/app.log"

# ==================== Rate Limiting ====================
REQUEST_TIMEOUT=30000
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# ==================== Model Descriptions ====================
MODEL_DESCRIPTION_BASE_PATH="./src/models/models_descrides/"